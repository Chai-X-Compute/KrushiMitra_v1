{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "application.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/application.py" }
  ],
  "functions": {
    "application.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
