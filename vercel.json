{
  "version": 2,
  "public": true,
  "builds": [
    { 
      "src": "application.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "api/.*\\.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/.*\\.py",
      "use": "@vercel/static-build",
      "config": { "distDir": "static" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/application.py"
    }
  ]
}
